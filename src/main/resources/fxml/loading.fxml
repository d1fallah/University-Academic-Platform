<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../css/loading.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.frontend.AuthLoadingController">
    <children>
        <!-- Background Image - Using the same approach as login screen -->
        <ImageView fitHeight="1080.0" fitWidth="1920.0" preserveRatio="false">
            <image>
                <Image url="@../images/loginBackGround.png" />
            </image>
        </ImageView>

        <!-- Loading Container -->
        <VBox alignment="CENTER" maxHeight="350.0" maxWidth="350.0" styleClass="loading-container">
            <!-- Logo -->
            <StackPane styleClass="logo-container">
                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                </ImageView>
            </StackPane>

            <!-- Status Text -->
            <Label fx:id="statusLabel" alignment="CENTER" styleClass="status-text" text="starting..." />

            <!-- Progress Bar -->
            <ProgressBar fx:id="progressBar" prefHeight="10.0" prefWidth="300.0" progress="0.0" styleClass="progress-bar" />
        </VBox>
    </children>
</StackPane>
