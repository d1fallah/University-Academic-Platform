                              <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                           </columnConstraints>
            
                           <!-- Matricule Row -->
                           <Label styleClass="field-label" text="Matricule:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                           <Label fx:id="matriculeLabel" styleClass="field-value" text="STD001" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
                           <!-- Password Row -->
                           <Label styleClass="field-label" text="Password:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                           <Label styleClass="field-value" text="********" GridPane.columnIndex="1" GridPane.rowIndex="1" />
