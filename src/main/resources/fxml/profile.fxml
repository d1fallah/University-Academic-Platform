                  <HBox alignment="CENTER" spacing="10">
                     <Label text="Log out" textFill="WHITE">
                        <font>
                           <Font name="System Bold" size="16.0" />
                        </font></Label>
                     <ImageView fitHeight="21.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../images/Logout2.png" />
                        </image>
                     </ImageView>
                  </HBox>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets left="74.0" right="74.0" top="30.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" maxWidth="1362.0" prefHeight="972.0" prefWidth="1362.0" styleClass="profile-container" BorderPane.alignment="TOP_CENTER">
         <children>
            <Line startX="1360.0" stroke="#e0e0e0" styleClass="section-divider">
               <VBox.margin>
                  <Insets bottom="41.0" top="-50.0" />
               </VBox.margin></Line>
            <VBox alignment="CENTER" maxWidth="1000.0" prefHeight="200.0" prefWidth="1000.0">
               <children>
                  <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="160.0" prefWidth="160.0" styleClass="image-container">
                     <children>
                        <ImageView fitHeight="110.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/profilep.png" />
                           </image>
                        </ImageView>
                     </children>
                  </VBox>
                  <Label fx:id="nameLabel" styleClass="profile-name" text="Mohamed Oday" />
                  <Label fx:id="roleLabel" alignment="CENTER" prefHeight="34.0" prefWidth="109.0" styleClass="role-badge" text="Student">
                     <VBox.margin>
                        <Insets bottom="41.0" />
                     </VBox.margin>
                  </Label>
      
                  <Line endX="1000.0" stroke="#e0e0e0" styleClass="section-divider">
                     <VBox.margin>
                        <Insets bottom="41.0" />
                     </VBox.margin>
                  </Line>
                  <VBox alignment="CENTER" maxWidth="-Infinity" prefWidth="912.0">
                     <children>
            
                        <GridPane hgap="10" styleClass="profile-info-grid" vgap="20">
                           <columnConstraints>
                              <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="120" />
