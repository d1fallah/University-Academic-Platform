   <stylesheets>
      <URL value="@../css/profile.css" />
   </stylesheets>
   <top>
      <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="page-title" text="Profile" HBox.hgrow="ALWAYS" />
