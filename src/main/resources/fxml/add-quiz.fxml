<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<StackPane fx:id="addQuizOverlay" stylesheets="@../css/dialog.css" visible="false" styleClass="dialog-overlay" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.frontend.AddQuizController">
   <children>
      <BorderPane fx:id="dialogContainer" maxHeight="500.0" maxWidth="1000.0" styleClass="dialog-container">
         <top>
            <Label alignment="CENTER" styleClass="dialog-title" text="Create New Quiz" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" top="30.0" />
               </BorderPane.margin>
            </Label>
         </top>
         <center>
            <HBox spacing="0.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefWidth="442.0" spacing="20.0" HBox.hgrow="NEVER">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label styleClass="dialog-label" text="Quiz Title">
                              </Label>
                              <TextField fx:id="quizTitleField" prefHeight="54.0" prefWidth="432.0" promptText="Enter quiz title..." styleClass="dialog-input-field">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </TextField>
                              <Label styleClass="dialog-helper-text" text="A descriptive title for your quiz">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0">
                           <children>
                              <Label styleClass="dialog-label" text="Description">
                              </Label>
                              <TextArea fx:id="quizDescriptionField" prefHeight="120.0" promptText="Describe your quiz content..." styleClass="dialog-input-field" wrapText="true">
                              </TextArea>
                              <Label styleClass="dialog-helper-text" text="A brief description to help students understand the quiz purpose">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <HBox.margin>
                        <Insets right="80.0" />
                     </HBox.margin>
                  </VBox>
                  
                  <!-- Vertical Line Separator -->
                  <Line endY="350.0" stroke="#666666" strokeWidth="2.0">
                     <HBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </HBox.margin>
                  </Line>
                  
                  <!-- Right side with Course selection -->
                  <VBox alignment="CENTER_LEFT" spacing="20.0" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label styleClass="dialog-label" text="Select Course">
                              </Label>
                              <ComboBox fx:id="courseComboBox" prefHeight="54.0" prefWidth="350.0" promptText="Choose a course..." styleClass="dialog-input-field" />
                              <Label styleClass="dialog-helper-text" text="The course this quiz belongs to">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0">
                           <children>
                              <Label styleClass="dialog-label" text="Additional Notes (Optional)">
                              </Label>
                              <TextArea fx:id="quizNotesField" prefHeight="100.0" promptText="Add any additional notes or instructions..." styleClass="dialog-input-field" wrapText="true">
                              </TextArea>
                              <Label styleClass="dialog-helper-text" text="Special instructions or notes for this quiz">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets left="80.0" />
                     </padding>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <padding>
                  <Insets left="50.0" right="50.0" />
               </padding>
            </HBox>
         </center>
         <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" styleClass="cancel-button" text="Cancel">
                  </Button>
                  <Button fx:id="nextButton" defaultButton="true" mnemonicParsing="false" onAction="#handleNext" styleClass="save-button" text="Next">
                     <padding>
                        <Insets bottom="6.0" left="46.0" right="46.0" top="6.0" />
                     </padding>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="30.0" left="20.0" right="40.0" top="20.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane>