<StackPane prefHeight="1080.0" prefWidth="1520.0" styleClass="content-section" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.frontend.UserProfileController">
   <stylesheets>
      <URL value="@../css/profile.css" />
      <URL value="@../css/dialog.css" />
      <URL value="@../css/login.css" />
   </stylesheets>
   <children>
      <BorderPane>
         <top>
            <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
               <children>
                  <Label styleClass="page-title" text="Profile" HBox.hgrow="ALWAYS" />
                  <Pane prefHeight="0.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="logoutButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleLogout" prefHeight="54.0" prefWidth="198.0" styleClass="logout-button">
                     <graphic>
                        <HBox alignment="CENTER" spacing="10">
                           <Label text="Log out" textFill="WHITE">
                              <font>
                                 <Font name="System Bold" size="16.0" />
                              </font>
                           </Label>
                           <ImageView fitHeight="21.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../images/Logout2.png" />
                              </image>
                           </ImageView>
                        </HBox>
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets left="74.0" right="74.0" top="30.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <VBox alignment="TOP_CENTER" maxWidth="1362.0" prefHeight="972.0" prefWidth="1362.0" styleClass="profile-container" BorderPane.alignment="TOP_CENTER">
               <children>
                  <Line startX="1360.0" stroke="#e0e0e0" styleClass="section-divider">
                     <VBox.margin>
                        <Insets bottom="41.0" top="-50.0" />
                     </VBox.margin>
                  </Line>
                  <VBox alignment="CENTER" maxWidth="1000.0" prefHeight="200.0" prefWidth="1000.0">
                     <children>
                        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="160.0" prefWidth="160.0" styleClass="image-container">
                           <children>
                              <ImageView fitHeight="110.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/profilep.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </VBox>
                        <Label fx:id="nameLabel" styleClass="profile-name" text="Mohamed Oday" />
                        <Label fx:id="roleLabel" alignment="CENTER" prefHeight="34.0" prefWidth="109.0" styleClass="role-badge" text="Student">
                           <VBox.margin>
                              <Insets bottom="41.0" />
                           </VBox.margin>
                        </Label>
                        
                        <Line endX="1000.0" stroke="#e0e0e0" styleClass="section-divider">
                           <VBox.margin>
                              <Insets bottom="41.0" />
                           </VBox.margin>
                        </Line>
                        
                        <VBox alignment="CENTER" maxWidth="-Infinity" prefWidth="912.0">
                           <children>
                              <GridPane hgap="10" styleClass="profile-info-grid" vgap="20">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="120" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="200" />
                                    <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                                 </columnConstraints>
                                 
                                 <!-- Matricule Row -->
                                 <Label styleClass="field-label" text="Matricule:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                 <Label fx:id="matriculeLabel" styleClass="field-value" text="STD001" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                 
                                 <!-- Password Row -->
                                 <Label styleClass="field-label" text="Password:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                 <Label styleClass="field-value" text="********" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                 <Hyperlink fx:id="changePasswordLink" onAction="#handleChangePassword" styleClass="action-link" text="Change Password" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                 
                                 <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                 </rowConstraints>
                                 <VBox.margin>
                                    <Insets bottom="41.0" />
                                 </VBox.margin>
                              </GridPane>
                           </children>
                        </VBox>
                        
                        <Line startX="1000.0" stroke="#e0e0e0" styleClass="section-divider">
                           <VBox.margin>
                              <Insets bottom="41.0" />
                           </VBox.margin>
                        </Line>
                        
                        <VBox alignment="CENTER" maxWidth="-Infinity" prefWidth="912.0">
                           <children>
                              <GridPane hgap="10" styleClass="profile-info-grid" vgap="20">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="120" />
                                    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10" prefWidth="200" />
                                 </columnConstraints>
                                 
                                 <!-- Level Row -->
                                 <Label styleClass="field-label" text="Level:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                 <Label fx:id="levelLabel" styleClass="user-info" text="License 1" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                 
                                 <!-- University Row -->
                                 <Label styleClass="field-label" text="University:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                 <Label fx:id="universityLabel" styleClass="user-info" text="Mohamed khider biskra" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                 
                                 <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                 </rowConstraints>
                                 <VBox.margin>
                                    <Insets bottom="41.0" />
                                 </VBox.margin>
                              </GridPane>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </center>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </BorderPane>
      
      <!-- Password Change Dialog Overlay -->
      <StackPane fx:id="passwordChangeOverlay" visible="false">
         <children>
            <BorderPane fx:id="passwordDialogContainer" maxHeight="600.0" maxWidth="700.0" styleClass="dialog-container">
               <top>
                  <Label alignment="CENTER" styleClass="dialog-title" text="Change Password" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="20.0" top="30.0" />
                     </BorderPane.margin>
                  </Label>
               </top>
               <center>
                  <VBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
                     <children>
                        <!-- Current Password -->
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Current Password" styleClass="dialog-label" />
                              <HBox prefHeight="70.0" styleClass="input-container">
                                 <children>
                                    <StackPane styleClass="icon-container">
                                       <children>
                                          <ImageView fitHeight="33.0" fitWidth="33.0" preserveRatio="true">
                                             <image>
                                                <Image url="@../images/password.png" />
                                             </image>
                                          </ImageView>
                                       </children>
                                    </StackPane>
                                    <Line endY="48.0" styleClass="input-divider" />
                                    <PasswordField fx:id="currentPasswordField" promptText="Enter current password" styleClass="text-field" HBox.hgrow="ALWAYS">
                                       <HBox.margin>
                                          <Insets left="5.0" />
                                       </HBox.margin>
                                    </PasswordField>
                                    <TextField fx:id="currentPasswordTextField" promptText="Enter current password" styleClass="text-field" visible="false" managed="false" HBox.hgrow="ALWAYS">
                                       <HBox.margin>
                                          <Insets left="5.0" />
                                       </HBox.margin>
                                    </TextField>
                                    <Button fx:id="currentPasswordEyeButton" onAction="#toggleCurrentPasswordVisibility" styleClass="eye-button">
                                       <graphic>
                                          <ImageView fitHeight="33.0" fitWidth="33.0" preserveRatio="true">
                                             <image>
                                                <Image url="@../images/eye.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        
                        <!-- New Password -->
                        <VBox spacing="5.0">
                           <children>
                              <Label text="New Password" styleClass="dialog-label" />
                              <HBox prefHeight="70.0" styleClass="input-container">
                                 <children>
                                    <StackPane styleClass="icon-container">
                                       <children>
                                          <ImageView fitHeight="33.0" fitWidth="33.0" preserveRatio="true">
                                             <image>
                                                <Image url="@../images/password.png" />
                                             </image>
                                          </ImageView>
                                       </children>
                                    </StackPane>
                                    <Line endY="48.0" styleClass="input-divider" />
                                    <PasswordField fx:id="newPasswordField" promptText="Enter new password" styleClass="text-field" HBox.hgrow="ALWAYS">
                                       <HBox.margin>
                                          <Insets left="5.0" />
                                       </HBox.margin>
                                    </PasswordField>
                                    <TextField fx:id="newPasswordTextField" promptText="Enter new password" styleClass="text-field" visible="false" managed="false" HBox.hgrow="ALWAYS">
                                       <HBox.margin>
                                          <Insets left="5.0" />
                                       </HBox.margin>
                                    </TextField>
                                    <Button fx:id="newPasswordEyeButton" onAction="#toggleNewPasswordVisibility" styleClass="eye-button">
                                       <graphic>
                                          <ImageView fitHeight="33.0" fitWidth="33.0" preserveRatio="true">
                                             <image>
                                                <Image url="@../images/eye.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        
                        <!-- Confirm New Password -->
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Confirm New Password" styleClass="dialog-label" />
                              <HBox prefHeight="70.0" styleClass="input-container">
                                 <children>
                                    <StackPane styleClass="icon-container">
                                       <children>
                                          <ImageView fitHeight="33.0" fitWidth="33.0" preserveRatio="true">
                                             <image>
                                                <Image url="@../images/password.png" />
                                             </image>
                                          </ImageView>
                                       </children>
                                    </StackPane>
                                    <Line endY="48.0" styleClass="input-divider" />
                                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" styleClass="text-field" HBox.hgrow="ALWAYS">
                                       <HBox.margin>
                                          <Insets left="5.0" />
                                       </HBox.margin>
                                    </PasswordField>
                                    <TextField fx:id="confirmPasswordTextField" promptText="Confirm new password" styleClass="text-field" visible="false" managed="false" HBox.hgrow="ALWAYS">
                                       <HBox.margin>
                                          <Insets left="5.0" />
                                       </HBox.margin>
                                    </TextField>
                                    <Button fx:id="confirmPasswordEyeButton" onAction="#toggleConfirmPasswordVisibility" styleClass="eye-button">
                                       <graphic>
                                          <ImageView fitHeight="33.0" fitWidth="33.0" preserveRatio="true">
                                             <image>
                                                <Image url="@../images/eye.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets left="50.0" right="50.0" />
                     </padding>
                  </VBox>
               </center>
               <bottom>
                  <HBox alignment="CENTER_RIGHT" spacing="15.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="cancelPasswordButton" cancelButton="true" mnemonicParsing="false" onAction="#handlePasswordChangeCancel" styleClass="cancel-button" text="Cancel" />
                        <Button fx:id="changePasswordButton" defaultButton="true" mnemonicParsing="false" onAction="#handlePasswordChangeSubmit" styleClass="save-button" text="Change Password">
                           <padding>
                              <Insets bottom="6.0" left="46.0" right="46.0" top="6.0" />
                           </padding>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="30.0" left="20.0" right="40.0" top="20.0" />
                     </padding>
                  </HBox>
               </bottom>
            </BorderPane>
         </children>
      </StackPane>
   </children>
</StackPane>
