<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane styleClass="root" stylesheets="@../css/quizResult.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.frontend.QuizResultController">
    <children>
        <!-- Background Image -->
        <ImageView fitHeight="1080.0" fitWidth="1520.0" preserveRatio="false">
            <image>
                <Image url="@../images/loginBackGround.png" />
            </image>
        </ImageView>
        
        <!-- Quiz Result Dialog - Using dialog.css styling -->
        <StackPane styleClass="dialog-overlay" stylesheets="@../css/dialog.css">
            <BorderPane maxHeight="720" maxWidth="800" styleClass="dialog-container">
                <!-- Header Section -->
                <top>
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <padding>
                            <Insets bottom="20" left="30" right="30" top="30" />
                        </padding>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label fx:id="resultTitleLabel" styleClass="quiz-header" text="Quiz Results" />
                            <Label fx:id="courseNameLabel" styleClass="course-title" text="Java Principles" />
                        </VBox>
                        
                        <!-- Score Circle -->
                        <StackPane styleClass="score-circle">
                            <VBox alignment="CENTER">
                                <Label fx:id="scoreTextLabel" styleClass="score-fraction" text="2/3" />
                                <Label fx:id="percentageLabel" styleClass="score-percentage" text="66%" />
                            </VBox>
                        </StackPane>
                    </HBox>
                </top>
                
                <center>
                    <VBox spacing="0" stylesheets="@../css/quizResult.css">
                        <padding>
                            <Insets left="30" right="30" top="0" bottom="0" />
                        </padding>
                        <!-- Tabs for Overview and Question Review -->
                        <TabPane fx:id="tabPane" styleClass="main-tabs" tabClosingPolicy="UNAVAILABLE">
                            <tabs>
                                <Tab text="Overview">
                                    <content>
                                        <VBox spacing="20" styleClass="overview-tab">
                                            <padding>
                                                <Insets bottom="20" left="0" right="0" top="20" />
                                            </padding>
                                            <!-- Stats Boxes -->
                                            <HBox spacing="15" styleClass="stats-box-container">
                                                <!-- Correct Box -->
                                                <VBox alignment="CENTER" styleClass="stat-box" HBox.hgrow="ALWAYS">
                                                    <Label fx:id="correctAnswersLabel" styleClass="stat-value" text="2" />
                                                    <Label styleClass="stat-label" text="Correct" />
                                                    <ImageView fitHeight="35" fitWidth="35" preserveRatio="true" styleClass="stat-icon">
                                                        <image>
                                                            <Image url="@../images/correct.png" />
                                                        </image>
                                                    </ImageView>
                                                </VBox>
                                                
                                                <!-- Incorrect Box -->
                                                <VBox alignment="CENTER" styleClass="stat-box" HBox.hgrow="ALWAYS">
                                                    <Label fx:id="incorrectAnswersLabel" styleClass="stat-value" text="1" />
                                                    <Label styleClass="stat-label" text="Incorrect" />
                                                    <ImageView fitHeight="35" fitWidth="35" preserveRatio="true" styleClass="stat-icon">
                                                        <image>
                                                            <Image url="@../images/incorrect.png" />
                                                        </image>
                                                    </ImageView>
                                                </VBox>
                                                
                                                <!-- Total Questions Box -->
                                                <VBox alignment="CENTER" styleClass="stat-box" HBox.hgrow="ALWAYS">
                                                    <Label fx:id="totalQuestionsLabel" styleClass="stat-value" text="3" />
                                                    <Label styleClass="stat-label" text="Total Questions" />
                                                    <ImageView fitHeight="35" fitWidth="35" preserveRatio="true" styleClass="stat-icon">
                                                        <image>
                                                            <Image url="@../images/book.png" />
                                                        </image>
                                                    </ImageView>
                                                </VBox>
                                            </HBox>
                                            
                                            <!-- Performance Section -->
                                            <VBox spacing="5" styleClass="performance-container">
                                                <HBox alignment="CENTER_LEFT" spacing="5">
                                                    <Label styleClass="performance-label" text="Performance" HBox.hgrow="ALWAYS" />
                                                    <Label fx:id="performancePercentLabel" styleClass="performance-percent" text="66%" />
                                                </HBox>
                                                <ProgressBar fx:id="performanceBar" maxWidth="Infinity" progress="0.66" styleClass="performance-bar" HBox.hgrow="ALWAYS" />
                                                <Label fx:id="performanceMessage" styleClass="performance-message" text="Good effort, keep practicing!" />
                                            </VBox>
                                        </VBox>
                                    </content>
                                </Tab>
                                <Tab text="Question Review">
                                    <content>
                                        <ScrollPane fitToWidth="true" styleClass="transparent-scroll" VBox.vgrow="ALWAYS">
                                            <padding>
                                                <Insets bottom="20" left="0" right="0" top="20" />
                                            </padding>
                                            <content>
                                                <VBox fx:id="questionsReviewContainer" spacing="15" styleClass="questions-list">
                                                    <!-- Questions will be added dynamically here -->
                                                </VBox>
                                            </content>
                                        </ScrollPane>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </VBox>
                </center>

                <!-- Action Buttons -->
                <bottom>
                    <HBox alignment="CENTER" spacing="20" styleClass="dialog-footer">
                        <padding>
                            <Insets bottom="30" left="30" right="30" top="30" />
                        </padding>
                        <Button fx:id="returnButton" styleClass="secondary-button" text="Return to Quizzes" />
                        <Button fx:id="retakeButton" styleClass="primary-button" text="Retake Quiz" />
                    </HBox>
                </bottom>
            </BorderPane>
        </StackPane>
    </children>
</StackPane>
 